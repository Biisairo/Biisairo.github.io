// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go Main",
      "type": "go",
      "request": "launch",
      "mode": "auto",           // "debug", "auto", "test" 등 가능
      "program": "${workspaceFolder}/src/main.go",  // main.go 경로
      "showLog": true,
      "args": ["build"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
